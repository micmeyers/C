#include <iostream>
/* looking to calculate dog age for dogs over the age of 2 */
int main() {
  
//declaring my dogs age as a variable  
 int dog_age = 3; 
 int early_years;
 int later_years;
 int human_years;
 char dog_name;

 // The first two years of a dogâ€™s life count as 21 human years.
  early_years = 21;
  //Each following year counts as 4 human years.
  later_years = (dog_age -2 )*4;
  //the human years for a dog is the early years and late years combined
  human_years = early_years+later_years;

  std::cout << "What is your dogs name? \n";
  std::cin >> dog_name;


  std::cout << "My name is " << dog_name << "! Ruff ruff, I am " << human_years << " years old in human years. \n ";

}
